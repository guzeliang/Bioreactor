<Window x:Class="SimpleApp.Stat"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimpleApp"
        xmlns:wpf="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        mc:Ignorable="d"
        Title="Stat" Height="800" Width="1024">
    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <StackPanel Orientation="Vertical">
            <Button Content="ALL" Tag="ALL" Click="ButtonBase_OnClick"></Button>
            <Button Content="温度"  Tag="TEMPERATURE" Click="ButtonBase_OnClick"></Button>
            <Button Content="气体"  Tag="GAS" Click="ButtonBase_OnClick"></Button>
        </StackPanel>
        <wpf:CartesianChart Grid.Column="1" x:Name="cc" DisableAnimations="True"
                            DataTooltip="{x:Null}"
                            AnimationsSpeed="0:0:0.15"
                            Zoom="Xy"/>
    </Grid>
</Window>
